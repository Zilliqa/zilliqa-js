{
  "parser": "typescript",
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }, 
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    }
  ]
}
